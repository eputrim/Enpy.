                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/premium_blouse" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/regular_montserrat"
                        android:text="Premium Blouse"
                        android:textColor="@color/primary_enpy"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold_montserrat"
                        android:text="Rp 165.000"
                        android:textColor="@color/primary_enpy"
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>