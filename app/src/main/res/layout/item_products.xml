<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/btn_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_flexBasisPercent="47.2%">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/xurl_photo_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/knit_sweater" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/xproduct_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="adasa"
            android:fontFamily="@font/regular_montserrat"
            android:textColor="@color/primary_enpy"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/xprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adasa"
            android:fontFamily="@font/semibold_montserrat"
            android:textColor="@color/primary_enpy"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>